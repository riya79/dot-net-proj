@page
@model Razorproject.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2>Forgot Password</h2>
<div class="container ">
<div class="row justify-content-center">
   <div class="col-md-4 border-light">
    <form method="post">
      <div class="form-group">
        <label for="email" class="control-label">Email</label>
        <input type="email" id="email" name="ForgotPass.Email" class="form-control" />
      
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary my-2">Send Reset Link</button>
      </div>
    </form>
   </div>
</div>
</div>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
