
@{
    var userId = Context.Request.Cookies["userId"];
    var currentLang = Context.Request.Cookies["currentLang"] ?? "en";
}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" asp-page="/Index">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active" asp-page="Index">
                        Home
                        <span class="visually-hidden">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Person/DisplayAll">Person</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Privacy">Privacy</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-page="/Category/Index">Category</a>
                </li>

            </ul>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/Login">Login</a>
                </li>
            </ul>
           <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/Register">Register</a>
                </li>
            </ul> 
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/UserInfo" asp-route-userid="@userId" asp-route-showBackButton="false" > Profile </a>
                    </li>
                </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/Logout">Logout</a>
                </li>
            </ul>
            <!-- Language Dropdown -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @currentLang.ToUpper()
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('en')">English</a></li>
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('es')">Español</a></li>
                        <!-- Add more languages here -->
                    </ul>
                </li>
            </ul>
         
        </div>
    </div>
</nav>